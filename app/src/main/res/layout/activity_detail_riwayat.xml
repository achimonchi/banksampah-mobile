<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/action_bar_activity_detail"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/consLayoutReqSampah"
        android:background="@color/colorWhite"
        android:elevation="3dp">

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintStart_toEndOf="@id/arrow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="sans-serif"
            android:text="Detail Riwayat"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consLayoutReqSampah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:elevation="3dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="24dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/action_bar_activity_detail">

        <TextView
            android:id="@+id/heading1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:fontFamily="sans-serif"
            android:text="Jual Sampah"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtNoTransaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:text="TP202012130001"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/heading1"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="8dp"
            android:text="Proses"
            android:textSize="14sp"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtNoTransaksi" />

        <TextView
            android:id="@+id/txtTanggalTransaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="8dp"
            app:layout_constraintBottom_toBottomOf="@id/txtStatus"
            app:layout_constraintTop_toBottomOf="@id/txtNoTransaksi"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Minggu 13 Des, 2020"
            android:textSize="14sp"
            />

        <View
            android:id="@+id/viewLine1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorBackground"
            app:layout_constraintTop_toBottomOf="@id/txtStatus"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="32dp"/>

        <TextView
            android:id="@+id/heading2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="16dp"
            android:fontFamily="sans-serif"
            android:text="Informasi Jemput"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewLine1" />

        <ImageView
            android:id="@+id/iv_time"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintTop_toBottomOf="@id/heading2"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_history"
            />

        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintTop_toBottomOf="@id/iv_time"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_location"
            />

        <TextView
            android:id="@+id/txtTglJemput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/iv_time"
            app:layout_constraintTop_toTopOf="@id/iv_time"
            app:layout_constraintBottom_toTopOf="@id/txtWaktuJemput"
            android:layout_marginHorizontal="48dp"
            android:text="Minggu 13 Des, 2020"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/txtWaktuJemput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txtTglJemput"
            app:layout_constraintStart_toEndOf="@id/iv_time"
            app:layout_constraintBottom_toBottomOf="@id/txtTglJemput"
            android:layout_marginHorizontal="48dp"
            android:text="Siang (11.00 - 14.00 WIB)"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/txtLokasiJemput"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/iv_location"
            app:layout_constraintTop_toTopOf="@id/iv_location"
            app:layout_constraintBottom_toBottomOf="@id/iv_location"
            android:layout_marginHorizontal="48dp"
            android:text="Jl. Kakap No.36a, Tangkerang Selatan, Kec. Bukit Raya, Kota Pekanbaru, Riau 28288."
            android:textSize="12sp"/>

        <View
            android:id="@+id/viewLine2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorBackground"
            app:layout_constraintTop_toBottomOf="@id/iv_location"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="32dp"/>

        <TextView
            android:id="@+id/heading3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="16dp"
            android:fontFamily="sans-serif"
            android:text="Detail (Estimasi)"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewLine2" />

        <TextView
            android:id="@+id/txtJenisSampah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="16dp"
            android:fontFamily="sans-serif"
            android:text="Sampah Plastik"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/heading3" />

        <TextView
            android:id="@+id/txtBeratSampah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/txtJenisSampah"
            app:layout_constraintTop_toTopOf="@id/txtJenisSampah"
            android:layout_marginHorizontal="72dp"
            android:text="7.0 Kg"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/txtHargaSampah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/txtBeratSampah"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="8dp"
            android:text="Rp. 14.000"
            android:textSize="14sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_batal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="16dp"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/black"
        android:text="Batal"
        app:layout_constraintTop_toBottomOf="@id/consLayoutReqSampah" />


</androidx.constraintlayout.widget.ConstraintLayout>